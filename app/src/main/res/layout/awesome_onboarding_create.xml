<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="0dp"
android:padding="10dp"
android:gravity="center_horizontal"
android:orientation="vertical"
    android:background="@color/holo_grey_dark"


    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/viewCreate"
    >

    <org.ironrabbit.type.CustomTypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/create_id"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?colorPrimary"

        />
    <org.ironrabbit.type.CustomTypefaceEditText android:id="@+id/edtNewName"
        android:selectAllOnFocus="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:autoLink="none"
        android:cursorVisible="true"
        android:inputType="textEmailAddress"
        android:layout_margin="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="24dp"
        android:padding="6dp"
        android:background="@drawable/rounded_rect"
        />
    <org.ironrabbit.type.CustomTypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/onboarding_generate"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        />

    <org.ironrabbit.type.CustomTypefaceTextView
        android:id="@+id/statusError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="?colorPrimary"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/viewProgress"
        >

    <ProgressBar
        android:id="@+id/progressNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="?colorPrimary"

        />
        <org.ironrabbit.type.CustomTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/registering_new_account_"
            android:textSize="16dp"
            android:textColor="?colorPrimary"
            />


    <ImageView
        android:id="@+id/progressImage"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_congrats"

        />



</LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/viewSuccess"
        android:visibility="gone"
        >


        <org.ironrabbit.type.CustomTypefaceTextView
            android:id="@+id/statusSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdasdasdasdasd"
            android:textColor="?colorPrimary"
            android:layout_marginTop="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/onboarding_avatar"
            android:id="@+id/imageAvatar"
            android:layout_margin="12dp"
            />
        <org.ironrabbit.type.CustomTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_avatar"
            android:textSize="16dp"
            />



        <org.ironrabbit.type.CustomTypefaceButton android:id="@+id/btnRegister"
            android:text="@string/lock_screen_skip"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/ab_transparent_chatsecure"
            style="@android:style/Widget.Button"

            />
    </LinearLayout>

    <org.ironrabbit.type.CustomTypefaceButton android:id="@+id/btnAdvanced"
        android:text="@string/advanced"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center"

        android:background="@android:color/transparent"
        android:textColor="?colorPrimary"
        android:gravity="center"

        />


</FrameLayout>